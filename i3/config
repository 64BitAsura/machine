# Display mode
set $displayMode "Set display mode [w]ork [l]aptop [h]ome"
bindsym $mod+i mode $displayMode
mode $displayMode {
    bindsym w exec killall conky; exec sleep 30; exec $HOME/.screenlayout/work.sh; exec --no-startup-id conky -c $HOME/.config/conky/conky_eden.config; exec sleep 20; exec --no-startup-id conky -c $HOME/.config/conky/conky_D2.config; exec workspace $workspace1 focus; exec i3-msg 'move workspace to output DP-2-2'; exec workspace $workspace3 focus; exec i3-msg 'move workspace to output DP-2-2'
                
    bindsym h exec $HOME/.screenlayout/home.sh
                
    bindsym l exec killall conky; exec sleep 20;exec xrandr --auto && xrandr --output DP-2-1 --off;exec xrandr --auto && xrandr --output DP-2-2 --off; exec $HOME/.screenlayout/standalone.sh; exec --no-startup-id conky -c $HOME/.config/conky/conky.config;

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

